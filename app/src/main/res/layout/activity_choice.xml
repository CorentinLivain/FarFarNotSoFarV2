<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/cardo"
        android:text="Faite Votre Choix ! "
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cardo"
        android:text="Zone :"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#A6FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/france"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioEndroit"
            android:text="France"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/europe"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioEndroit"
            android:text="Europe"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/monde"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioEndroit"
            android:text="Monde"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/cardo"
        android:text="Nombre de balise :"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#A6FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/cinq"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioNbBalise"
            android:text="5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/dix"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioNbBalise"
            android:text="10"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/vingtCinq"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioNbBalise"
            android:text="25"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/cinquante"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioNbBalise"
            android:text="50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/cent"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cardo"
            android:onClick="radioNbBalise"
            android:text="100"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/cardo"
        android:onClick="valide"
        android:text="Valider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cardo"
        android:onClick="menu"
        android:text="Menu principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valider"
        android:background="@drawable/custom_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>